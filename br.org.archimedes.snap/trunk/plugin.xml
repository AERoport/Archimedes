<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="br.org.archimedes.core.factory">
         <factory id="br.org.archimedes.snap"
          class="br.org.archimedes.snap.SnapFactory">
         </factory>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.trim.status">
         <toolbar
               id="br.org.archimedes.ortosnap">
            <command
                  commandId="br.org.archimedes.snap.command"
                  id="br.org.archimedes.snap.button"
                  label="%action.snap.label"
                  mnemonic="%action.snap.mnemonic"
                  style="toggle"
                  tooltip="%action.snap.tooltip">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="menu:edit?before=slot3">
         <command
               commandId="br.org.archimedes.snap.command"
               id="br.org.archimedes.snap.menubutton"
               label="%action.snap.label"
               mnemonic="%action.snap.mnemonic"
               style="toggle"
               tooltip="%action.snap.tooltip">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="br.org.archimedes.snap.SnapHandler"
            description="%action.snap.tooltip"
            id="br.org.archimedes.snap.command"
            name="%action.snap.label">
         <state
               class="org.eclipse.jface.commands.ToggleState"
               id="br.org.archimedes.snap.state">
         </state>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="br.org.archimedes.snap.command"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F3"/>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="br.org.archimedes.snap.MenuStateInitializer"></startup>
   </extension>
</plugin>
