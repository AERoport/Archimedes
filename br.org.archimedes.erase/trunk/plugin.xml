<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="br.org.archimedes.core.factory">
         <factory id="br.org.archimedes.erase"
          class="br.org.archimedes.erase.EraseFactory">
         	<shortcut id="e"/>
         </factory>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:edit?after=clipboard.ext">
         <command
               commandId="br.org.archimedes.core.factoryactivator"
               icon="icons/delete.png"
               label="%command.erase.label"
               mnemonic="%command.erase.mnemonic"
               style="push"
               tooltip="%command.erase.tooltip">
            <parameter
                  name="br.org.archimedes.core.factoryactivator.name"
                  value="br.org.archimedes.erase">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:edit">
         <command
               commandId="br.org.archimedes.core.factoryactivator"
               icon="icons/delete.png"
               label="%command.erase.label"
               mnemonic="%command.erase.mnemonic"
               style="push"
               tooltip="%command.erase.tooltip">
            <parameter
                  name="br.org.archimedes.core.factoryactivator.name"
                  value="br.org.archimedes.erase">
            </parameter>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="br.org.archimedes.core.factoryactivator"
            contextId="br.org.archimedes.idle"
            schemeId="br.org.archimedes.bindings.default"
            sequence="DEL">
         <parameter
               id="br.org.archimedes.core.factoryactivator.name"
               value="br.org.archimedes.erase">
         </parameter>
      </key>
   </extension>
</plugin>
