<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="br.org.archimedes.core.factory">
         <factory id="br.org.archimedes.orto"
          class="br.org.archimedes.orto.OrtoFactory">
         	<shortcut id="o"/>
         </factory>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.trim.status">
         <toolbar
            id="br.org.archimedes.ortosnap">
          <command
                commandId="br.org.archimedes.orto.command"
                id="br.org.archimedes.orto.button"
                label="%action.orto.label"
                style="toggle"
                tooltip="%action.orto.tooltip">
          </command>
        </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="menu:edit?before=slot3">
         <command
               commandId="br.org.archimedes.orto.command"
               id="br.org.archimedes.orto.menubutton"
               label="%action.orto.label"
               mnemonic="S"
               style="toggle"
               tooltip="%action.orto.tooltip">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="br.org.archimedes.orto.OrtoHandler"
            description="%action.orto.tooltip"
            id="br.org.archimedes.orto.command"
            name="%action.orto.label">
         <state
               class="org.eclipse.jface.commands.ToggleState"
               id="br.org.archimedes.orto.state">
         </state>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="br.org.archimedes.orto.command"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F8"/>
   </extension>
</plugin>
