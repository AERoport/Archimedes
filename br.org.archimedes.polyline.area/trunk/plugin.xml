<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            description="The action set that contains the actions regarding the area and perimeter"
            id="br.org.archimedes.polyline.area.actionSet"
            label="Area and Perimeter Action set"
            visible="true">
         <menu
               id="calculus"
               label="%menu.calculus.label"
               path="additions">
            <groupMarker name="calculus0"/>
            <separator name="separator0"/>
            <groupMarker name="calculus1"/>
            <separator name="separator1"/>
            <groupMarker name="calculus2"/>
            <separator name="separator2"/>
            <groupMarker name="calculus3"/>
            <separator name="separator3"/>
            <groupMarker name="calculus4"/>
         </menu>
         <action
               icon="icons/area.png"
               id="br.org.archimedes.polyline.area.action"
               label="%action.area.label"
               menubarPath="calculus/calculus1"
               style="push"
               class="br.org.archimedes.polyline.area.AreaAction"
               toolbarPath="additions"
               tooltip="%action.area.tooltip">
            <enablement>
               <objectClass name="br.org.archimedes.model.Drawing"/>
            </enablement>
         </action>
      </actionSet>
   </extension>
   <extension
         point="br.org.archimedes.factory">
         <factory id="br.org.archimedes.polyline.area"
          	class="br.org.archimedes.polyline.area.AreaPerimeterFactory"/>
   </extension>
</plugin>
