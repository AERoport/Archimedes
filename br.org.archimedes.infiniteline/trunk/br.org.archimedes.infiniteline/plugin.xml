<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="br.org.archimedes.element">
         <element id="br.org.archimedes.infiniteline" name="InfiniteLine" 
         	class="br.org.archimedes.infiniteline.InfiniteLine"
         	factory="br.org.archimedes.infiniteline.InfiniteLineFactory"
         	shortcut="xl" />
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            description="The action set for the infinite line"
            id="br.org.archimedes.infiniteline.actionSet"
            label="Infinite Line action set"
            visible="true">
         <action
               class="br.org.archimedes.infiniteline.InfiniteLineAction"
               icon="icons/infiniteLine.png"
               id="br.org.archimedes.infiniteline.actionCreate"
               label="%action.create.label"
               menubarPath="create/simple0"
               style="push"
               toolbarPath="create/simple0"
               tooltip="%action.create.tooltip">
            <enablement>
               <objectClass name="br.org.archimedes.model.Drawing"/>
            </enablement>
         </action>
      </actionSet>
   </extension>
</plugin>
